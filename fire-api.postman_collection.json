			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save tokens to environment variables",
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"access_token\", jsonData.tokens.access);",
									"    pm.environment.set(\"refresh_token\", jsonData.tokens.refresh);",
									"    pm.environment.set(\"user_id\", jsonData.user.id);",
									"    console.log(\"✅ Tokens saved! Access token:\", jsonData.tokens.access.substring(0, 20) + \"...\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"name\": \"John Doe\",\n  \"phone\": \"+1234567890\",\n  \"password\": \"securepass123\",\n  \"password_confirm\": \"securepass123\",\n  \"user_type\": \"public\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"register",
								""
							]
						},
						"description": "Register a new user account. Automatically saves JWT tokens to environment."
					},
					"response": []
				},
